{
  "name": "png",
  "version": "1.0.0",
  "description": "A phone number generator project",
  "main": "server/app.js",
  "scripts": {
    "deploy": "now --no-verify && now alias larrystone-png",
    "build": "run-p build:*",
    "start": "node dist/app.js",
    "dev": "run-p dev:*",
    "dev:client": "webpack --config webpack.dev.js --watch",
    "dev:server": "nodemon --watch server --exec babel-node -- server/app.js",
    "build:client": "webpack --config webpack.prod.js",
    "build:server": "babel -d ./dist ./server -s",
    "test:server": "nyc mocha server/__tests__/* --require babel-core/register --exit",
    "test:report": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "repository": "https://github.com/larrystone/PNG.git",
  "author": "lawal lanre <lanre.lawal@andela.com>",
  "license": "MIT",
  "dependencies": {
    "babel-loader": "^7.1.0",
    "babel-preset-react": "^6.24.1",
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "html-webpack-plugin": "^3.2.0",
    "react": "^16.7.0",
    "react-console-emulator": "^2.0.0",
    "react-dom": "^16.7.0",
    "webpack": "3.10.0",
    "yarn-run-all": "^3.1.1"
  },
  "devDependencies": {
    "axios": "^0.18.0",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "compression-webpack-plugin": "1.1.2",
    "css-loader": "^2.1.0",
    "eslint-plugin-react": "^7.12.4",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^3.0.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "nyc": "^13.1.0",
    "style-loader": "^0.23.1",
    "uglifyjs-webpack-plugin": "1.1.6",
    "webpack-cli": "^3.2.1",
    "webpack-merge": "^4.2.1"
  }
}